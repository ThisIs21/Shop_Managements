n        const res = await axios.post(\"http://localhost:8081/api/v1/sales\", {\n          customer_id: 1,\n          date: new Date().toISOString(),\n          items: cart.value.map(i => ({\n            product_id: i.id,\n            qty: i.qty,\n            price: i.price\n          }))\n        }, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        alert(\"Pembayaran berhasil! ID Transaksi: \" + res.data.data.id);\n        cart.value = [];\n      } catch (e) {\n        alert(\"Gagal: \" + (e.response?.data?.message || e.message));\n      }\n    };\n    const handlePrintReceipt = () => alert(\"Mencetak struk...\");\n    const __returned__ = {\n      products,\n      cart,\n      addToCart,\n      removeFromCart,\n      subtotal,\n      tax,\n      total,\n      amountReceived,\n      change,\n      formatCurrency,\n      handlePayNow,\n      handlePrintReceipt,\n      ref,\n      computed,\n      get axios() {\n        return axios;\n      },\n      CashierSidebar\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","computed","axios","CashierSidebar","products","id","name","price","stock","cart","addToCart","p","exist","value","find","i","qty","push","removeFromCart","splice","subtotal","reduce","s","tax","total","amountReceived","change","formatCurrency","v","Number","toLocaleString","handlePayNow","length","alert","token","localStorage","getItem","res","post","customer_id","date","Date","toISOString","items","map","product_id","headers","Authorization","data","e","response","message","handlePrintReceipt"],"sources":["C:/Users/SPC STYLE 5/aplikasi/src/views/CashierPage.vue"],"sourcesContent":["<template>\n  <div class=\"min-h-screen flex bg-white\">\n    <!-- Sidebar -->\n    <CashierSidebar />\n\n    <!-- Main content -->\n    <main class=\"flex-1 p-6\">\n      <h2 class=\"text-2xl font-bold text-center mb-6\">Cashier - Order</h2>\n\n      <div class=\"grid grid-cols-1 md:grid-cols-2 gap-6\">\n        <!-- ðŸ”¹ LEFT: Cart & Order Summary -->\n        <section>\n          <h3 class=\"text-lg font-semibold mb-3\">Cart Order</h3>\n\n          <div v-if=\"cart.length > 0\">\n            <table class=\"w-full text-sm border\">\n              <thead>\n                <tr class=\"bg-gray-100\">\n                  <th class=\"p-2\">Item</th>\n                  <th class=\"p-2\">Qty</th>\n                  <th class=\"p-2\">Subtotal</th>\n                  <th class=\"p-2\">X</th>\n                </tr>\n              </thead>\n              <tbody>\n                <tr v-for=\"(item, i) in cart\" :key=\"item.id\" class=\"border-t\">\n                  <td class=\"p-2\">{{ item.name }}</td>\n                  <td class=\"p-2\">\n                    <input\n                      type=\"number\"\n                      v-model.number=\"item.qty\"\n                      min=\"1\"\n                      :max=\"item.stock\"\n                      class=\"w-14 border rounded p-1\"\n                    />\n                  </td>\n                  <td class=\"p-2\">\n                    {{ formatCurrency(item.price * item.qty) }}\n                  </td>\n                  <td class=\"p-2\">\n                    <button @click=\"removeFromCart(i)\" class=\"text-red-500\">\n                      âœ•\n                    </button>\n                  </td>\n                </tr>\n              </tbody>\n            </table>\n          </div>\n          <p v-else class=\"text-gray-500\">Cart masih kosong...</p>\n\n          <!-- Order Summary -->\n          <div v-if=\"cart.length > 0\" class=\"mt-6\">\n            <h4 class=\"font-semibold mb-2\">Order Summary</h4>\n            <div class=\"space-y-1 text-sm\">\n              <div class=\"flex justify-between\">\n                <span>Subtotal</span>\n                <span>{{ formatCurrency(subtotal) }}</span>\n              </div>\n              <div class=\"flex justify-between\">\n                <span>Tax (10%)</span>\n                <span>{{ formatCurrency(tax) }}</span>\n              </div>\n              <div class=\"flex justify-between font-bold border-t pt-2\">\n                <span>Total</span>\n                <span>{{ formatCurrency(total) }}</span>\n              </div>\n            </div>\n\n            <!-- Payment -->\n            <div class=\"mt-4\">\n              <label class=\"block mb-2 text-sm\">Amount Received</label>\n              <input\n                v-model.number=\"amountReceived\"\n                type=\"number\"\n                placeholder=\"Masukkan nominal\"\n                class=\"w-full border rounded p-2 text-sm\"\n              />\n              <p class=\"text-sm mt-1\">\n                Change:\n                <span class=\"font-semibold\">\n                  {{ formatCurrency(change) }}\n                </span>\n              </p>\n            </div>\n\n            <!-- Buttons -->\n            <div class=\"flex flex-col gap-3 mt-6\">\n              <button\n                @click=\"handlePayNow\"\n                class=\"w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700\"\n              >\n                Pay Now\n              </button>\n              <button\n                @click=\"handlePrintReceipt\"\n                class=\"w-full bg-gray-100 py-2 rounded hover:bg-gray-200\"\n              >\n                Print Receipt\n              </button>\n            </div>\n          </div>\n        </section>\n\n        <!-- ðŸ”¹ RIGHT: Products -->\n        <section>\n          <h3 class=\"text-lg font-semibold mb-3\">Available Products</h3>\n          <div\n            ref=\"productSlider\"\n            class=\"flex space-x-4 overflow-x-auto scrollbar-hide snap-x snap-mandatory\"\n          >\n            <div\n              v-for=\"p in products\"\n              :key=\"p.id\"\n              class=\"min-w-[160px] snap-center border rounded-lg p-4 bg-white shadow flex flex-col justify-between\"\n            >\n              <div>\n                <h4 class=\"font-semibold\">{{ p.name }}</h4>\n                <p class=\"text-sm text-gray-600\">\n                  {{ formatCurrency(p.price) }}\n                </p>\n                <p class=\"text-xs text-green-600\">Stock: {{ p.stock }}</p>\n              </div>\n              <button\n                @click=\"addToCart(p)\"\n                class=\"mt-3 bg-blue-500 text-white text-sm py-1 rounded hover:bg-blue-600\"\n              >\n                Add\n              </button>\n            </div>\n          </div>\n        </section>\n      </div>\n    </main>\n  </div>\n</template>\n\n<script setup>\nimport { ref, computed } from \"vue\";\nimport axios from \"axios\";\nimport CashierSidebar from \"../components/CashierSidebar.vue\";\n\n// Dummy products\nconst products = ref([\n  { id: 1, name: \"Kaos Polos\", price: 50000, stock: 10 },\n  { id: 2, name: \"Kemeja Putih\", price: 80000, stock: 5 },\n  { id: 3, name: \"Hoodie\", price: 120000, stock: 3 },\n  { id: 4, name: \"Celana Jeans\", price: 150000, stock: 7 },\n]);\n\nconst cart = ref([]);\n\n// Cart logic\nconst addToCart = (p) => {\n  const exist = cart.value.find((i) => i.id === p.id);\n  if (exist) {\n    if (exist.qty < p.stock) exist.qty++;\n  } else {\n    cart.value.push({ ...p, qty: 1 });\n  }\n};\nconst removeFromCart = (i) => cart.value.splice(i, 1);\n\n// Summary\nconst subtotal = computed(() =>\n  cart.value.reduce((s, i) => s + i.price * i.qty, 0)\n);\nconst tax = computed(() => subtotal.value * 0.1);\nconst total = computed(() => subtotal.value + tax.value);\n\n// Payment\nconst amountReceived = ref(0);\nconst change = computed(() =>\n  amountReceived.value > total.value ? amountReceived.value - total.value : 0\n);\n\nconst formatCurrency = (v) => \"Rp\" + Number(v).toLocaleString(\"id-ID\");\n\n// API\nconst handlePayNow = async () => {\n  if (cart.value.length === 0) {\n    alert(\"Cart masih kosong!\");\n    return;\n  }\n  try {\n    const token = localStorage.getItem(\"token\");\n    const res = await axios.post(\n      \"http://localhost:8081/api/v1/sales\",\n      {\n        customer_id: 1,\n        date: new Date().toISOString(),\n        items: cart.value.map((i) => ({\n          product_id: i.id,\n          qty: i.qty,\n          price: i.price,\n        })),\n      },\n      { headers: { Authorization: `Bearer ${token}` } }\n    );\n    alert(\"Pembayaran berhasil! ID Transaksi: \" + res.data.data.id);\n    cart.value = [];\n  } catch (e) {\n    alert(\"Gagal: \" + (e.response?.data?.message || e.message));\n  }\n};\n\nconst handlePrintReceipt = () => alert(\"Mencetak struk...\");\n</script>\n\n<style>\n.scrollbar-hide::-webkit-scrollbar {\n  display: none;\n}\n.scrollbar-hide {\n  -ms-overflow-style: none;\n  scrollbar-width: none;\n}\n</style>\n"],"mappings":";;;;;AAyIA,SAASA,GAAG,EAAEC,QAAQ,QAAQ,KAAK;AACnC,OAAOC,KAAK,MAAM,OAAO;AACzB,OAAOC,cAAc,MAAM,kCAAkC;;AAE7D;;;;;;;;IACA,MAAMC,QAAQ,GAAGJ,GAAG,CAAC,CACnB;MAAEK,EAAE,EAAE,CAAC;MAAEC,IAAI,EAAE,YAAY;MAAEC,KAAK,EAAE,KAAK;MAAEC,KAAK,EAAE;IAAG,CAAC,EACtD;MAAEH,EAAE,EAAE,CAAC;MAAEC,IAAI,EAAE,cAAc;MAAEC,KAAK,EAAE,KAAK;MAAEC,KAAK,EAAE;IAAE,CAAC,EACvD;MAAEH,EAAE,EAAE,CAAC;MAAEC,IAAI,EAAE,QAAQ;MAAEC,KAAK,EAAE,MAAM;MAAEC,KAAK,EAAE;IAAE,CAAC,EAClD;MAAEH,EAAE,EAAE,CAAC;MAAEC,IAAI,EAAE,cAAc;MAAEC,KAAK,EAAE,MAAM;MAAEC,KAAK,EAAE;IAAE,CAAC,CACzD,CAAC;IAEF,MAAMC,IAAI,GAAGT,GAAG,CAAC,EAAE,CAAC;;IAEpB;IACA,MAAMU,SAAS,GAAIC,CAAC,IAAK;MACvB,MAAMC,KAAK,GAAGH,IAAI,CAACI,KAAK,CAACC,IAAI,CAAEC,CAAC,IAAKA,CAAC,CAACV,EAAE,KAAKM,CAAC,CAACN,EAAE,CAAC;MACnD,IAAIO,KAAK,EAAE;QACT,IAAIA,KAAK,CAACI,GAAG,GAAGL,CAAC,CAACH,KAAK,EAAEI,KAAK,CAACI,GAAG,EAAE;MACtC,CAAC,MAAM;QACLP,IAAI,CAACI,KAAK,CAACI,IAAI,CAAC;UAAE,GAAGN,CAAC;UAAEK,GAAG,EAAE;QAAE,CAAC,CAAC;MACnC;IACF,CAAC;IACD,MAAME,cAAc,GAAIH,CAAC,IAAKN,IAAI,CAACI,KAAK,CAACM,MAAM,CAACJ,CAAC,EAAE,CAAC,CAAC;;IAErD;IACA,MAAMK,Q